{
  "name": "@arach/arc",
  "version": "0.2.5",
  "type": "module",
  "description": "Visual diagram editor for creating architecture diagrams",
  "author": "Arach Tchoupani",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arach/arc.git"
  },
  "keywords": [
    "diagram",
    "editor",
    "architecture",
    "visualization",
    "react",
    "isometric"
  ],
  "files": [
    "lib/arc.es.js",
    "lib/arc.umd.js",
    "lib/index.d.ts"
  ],
  "main": "./lib/arc.umd.js",
  "module": "./lib/arc.es.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/arc.es.js",
      "require": "./lib/arc.umd.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:lib": "vite build --config vite.config.lib.js",
    "build:player": "vite build --config vite.config.player.js && vite build --config vite.config.player-slim.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "generate-og": "node scripts/generate-og.js",
    "prepublishOnly": "pnpm build:lib"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "lucide-react": ">=0.400.0"
  },
  "dependencies": {
    "@arach/dewey": "^0.2.0",
    "@base-ui/react": "^1.0.0",
    "js-yaml": "^4.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "lucide-react": "^0.562.0",
    "puppeteer": "^24.34.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "satori": "^0.18.3",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "three": "^0.182.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4"
  }
}
