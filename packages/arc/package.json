{
  "name": "@arach/arc",
  "version": "0.1.0",
  "description": "Declarative architecture diagram renderer for React",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.562.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "react",
    "diagram",
    "architecture",
    "svg",
    "declarative"
  ],
  "author": "arach",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/arach/arc.git",
    "directory": "packages/arc"
  },
  "homepage": "https://github.com/arach/arc#readme"
}
